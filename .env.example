# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# Authentication
JWT_SECRET="your-jwt-secret-key-here"

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# OpenAI Integration (Optional - Bubbles will use mock responses if not provided)
OPENAI_API_KEY="your-openai-api-key-here"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# Supabase Configuration (Frontend Only)
# Get these values from your Supabase Dashboard: https://supabase.com/dashboard

# Your Supabase project URL (found in Settings > API)
REACT_APP_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Your Supabase anon key (found in Settings > API)
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Example:
# REACT_APP_SUPABASE_URL=https://abc123xyz.supabase.co
# REACT_APP_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...